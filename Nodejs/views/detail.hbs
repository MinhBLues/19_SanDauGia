<div class="product_image_area section_padding">
    <div class="container">
        <div class="row">
            <div class="col-sm-5">
                <div class="card-img p-4 d-flex align-items-center justify-content-center" style="height: 400px;">
                    <img id="main-img" class="imgs" src="/images/product/{{product.ProductID}}/main.jpg">
                </div>
                <div id="sub-img-group" class="d-flex justify-content-between">
                    <div class="sub-img col-md-4 d-flex align-items-center">
                        <img src="/images/product/{{product.ProductID}}/main.jpg">
                    </div>
                    {{#each subIMG}}
                    <div class="sub-img col-md-4 d-flex align-items-center">
                        <img class="align-center" src="/images/product/{{ProductID}}/{{id}}.jpg">
                    </div>
                    {{/each}}
                </div>

            </div>
        <div class="col-sm-5 offset-lg-1">
            <div class="s_product_text">
                <h2 id="product-name">{{product.Name}}</h2>
                <h3>Giá hiện tại: {{Numberformat product.Price}} VND</h3>
                {{#if product.stepPrice}}
                <h2>Giá mua ngay: {{Numberformat product.InstancePrice}} VND</h2>
                {{/if}}
                {{#if InstancePrice}}
                <h2 id="InstancePrice">Giá mua ngay: {{Numberformat product.InstancePrice}} VND</h2>
                {{/if}}
                <div> Thể loại: <a href="/Category/{{catName.CatName}}/products">{{catName.CatName}}</a>
                </div>
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <td>Người bán:
                                </td>
                                <td>{{product.Seller}}
                                </td>
                                <td>Score:
                                </td>
                                <td>{{Percentformat sellScore}}
                                </td>
                            </tr>
                            {{#if product.PriceHolder}}
                            <tr>
                                <td>
                                    Người ra giá:
                                </td>
                                <td>
                                    {{product.PriceHolder}}
                                </td>
                                <td>
                                    Score:
                                </td>
                                <td>
                                    {{Percentformat bidScore}}
                                </td>
                            </tr>
                            {{/if}}
                            <tr>
                                <td>
                                    Thời gian đăng:
                                </td>
                                <td colspan="3">
                                    {{DateTimeFormat product.StartTime}}
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Thời gian kết thúc:
                                </td>
                                <td colspan="3">
                                    <span id="EndTime" class="countdown pt-4">{{product.EndTime}}
                                    </span>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <p>
                    {{product.Description}}
                </p>
                <div class="col-sm-12 mt-10" id="AuctionZone">
                    <form id="Auction">
                        <div class="col-lg-6 col-sm-12">
                            <input type="number" name="Price" value="{{product.Price}}" min="{{product.Price}}"
                                step="{{product.StepPrice}}">
                            <input name="StepPrice" value="{{product.StepPrice}}" hidden=true>
                        </div>
                        <div class="col-sm-12 mt-10">
                            {{#if isAuthenticated}}
                            <button type="button" class="btn btn-primary" data-toggle="modal"
                                data-target="#AuctionDialog">Đấu giá</button>
                            {{else}}
                            <a class="btn btn-primary" href="/login?retUrl=/detail/{{ID}}">Đấu giá</a>
                            {{/if}}
                            <a href="/detail/{{ID}}/Buy" class="btn btn-primary m-auto">Mua ngay</a>
                            <a href="/wishlist/{{ID}}" class="btn btn-outline-danger favoriteBtn">
                                {{#if product.isFavorite}}
                                <i class="fa fa-heart"></i>
                                {{else}}
                                <i class="far fa-heart "></i>
                                {{/if}}
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

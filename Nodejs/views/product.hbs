{{>header}}
<!--::header part start::-->
<header class="main_menu home_menu"></header>
<!-- Header part end-->
<!--================Home Banner Area =================-->
<!-- breadcrumb start-->
<section class="breadcrumb breadcrumb_bg">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-sm-12">
                <div class="breadcrumb_iner">
                    <div class="breadcrumb_iner_item">
                        <p><a href="/">Trang chủ </a>/
                            <a href="/Category/{{catName}}/products">{{catName}}</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- breadcrumb start-->
<!--================Category Product Area =================-->
<section class="cat_product_area section_padding border_top">
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <div class="left_sidebar_area">
                    <aside class="left_widgets p_filter_widgets sidebar_box_shadow">
                        <div class="l_w_title">
                            <h3>Danh mục</h3>
                        </div>
                        <div class="widgets_inner">
                            <ul class="list">
                                {{#each categories}}
                                <li>
                                    <a href="/Category/{{CatName}}/products">{{CatName}}</a>
                                </li>
                                {{/each}}
                            </ul>
                        </div>
                    </aside>
                </div>
            </div>
            <div class="col-sm-9">
                <div class="row">
                    {{#each products}}
                    <div class="col-lg-4 col-sm-6 mt-10" style="display: bvlock;">
                        <a class="h-100" href="/detail/{{ProductID}}">
                        <div class="card m-auto h-100" style="width: 17rem; background-color: transparent;">
                            <img width="300" height="340" class="card-img-top" src="/images/arrivel/{{IMG}}.png" alt="">
                            <div class="card-body">
                                <h5 class="card-title text-center">{{Name}}</h5>
                                <p class="card-text">
                                    <p>Giá hiện tại: {{Numberformat Price}} VND</p>
                                    {{#if InstancePrice}}
                                    <p>Giá mua ngay: {{Numberformat InstancePrice}} VND</p>
                                    {{/if}}
                                    <p>Ngày kết thúc: {{DateTimeFormat EndTime}}</p>
                                </p>
                            </div></a>
                            <a class="mt-0 card-footer text-center " href="#">
                                <i class="far fa-heart" style="color: red;"></i>
                                <span class="text-danger"> Yêu thích</span>
                            </a>
                        </div>
                    </div>
                    {{/each}}
                </div>

                <nav aria-label="Page navigation" class="mt-10">
                    <ul class="pagination justify-content-center">
                        <li class="page-item">
                            <a class="page-link" href="?page={{prev_value}}" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                                <span class="sr-only">Previous</span>
                            </a>
                        </li>
                        {{#each page_numbers}}
                        {{#if isCurrentPage}}
                        <li class="page-item active"><a class="page-link" href="#">{{value}}</a></li>
                        {{else}}
                        <li class="page-item"><a class="page-link" href="/?page={{value}}">{{value}}</a></li>
                        {{/if}}
                        {{/each}}
                        <li class="page-item">
                            <a class="page-link" href="?page={{next_value}}" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                                <span class="sr-only">Next</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>

    </div>
</section>
{{>footer}}
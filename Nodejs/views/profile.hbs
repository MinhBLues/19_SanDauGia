{{>header}}
<section class="breadcrumb breadcrumb_bg">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="breadcrumb_iner">
                    <div class="breadcrumb_iner_item">
                        <p>Trang chủ/ Trang cá nhân</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="checkout_area section_padding">
    <div class="container">
        <div class="billing_details">
            <div class="form-group ">
                <h4>Thông tin tài khoản</h4>
            </div>
            <form class="row contact_form" action="#" method="post" novalidate="novalidate">
                <div class="col-md-12 form-group ">
                    <label class="col-sm-2 col-form-label" for="fullname">Họ tên </label>
                    <input type="text" class="form-control" id="first" value="{{name}}" name="name" />
                </div>
                <div class="col-md-12 form-group">
                    <label class="col-sm-2 col-form-label" for="phone_number">Số điện thoại</label>
                    <input type="text" class="form-control" id="phone" name="phone" value="{{phone}}" />
                </div>
                <div class="col-md-12 form-group">
                    <label class="col-sm-2 col-form-label" for="email">Email</label>
                    <input type="text" class="form-control" id="email" name="email"  value="{{email}}" />
                </div>
                <div class="col-md-12 form-group">
                    <label class="col-sm-2 col-form-label" for="Address">Địa chỉ</label>
                    <input type="text" class="form-control" id="address" name="address"  value="{{address}}" />
                </div>
                <div class="col-md-12 form-group">
                    <label class="col-sm-2  control-label" for="pasword">Giới tính</label>
                    <div class="input-wrap pl-5">
                        <div class="row ">
                            <div class="col-xs-4 ">
                                <label>
                                    <input type="radio" name="gender" value="on" id="gender_male" class="gender"
                                        checked="">
                                    <span>
                                        <i class="ico"></i>
                                    </span>
                                    Nam
                                </label>
                            </div>
                            <div class="col-xs-4 pl-5">
                                <label>
                                    <input type="radio" name="gender" value="off" id="gender_female" class="gender">
                                    <span>
                                        <i class="ico"></i>
                                    </span>
                                    Nữ
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 form-group">
                    <input type="password" class="form-control" id="cfmpassword" name="cfmpassword"
                        placeholder="Old Password" />
                </div>
                <div class="col-md-12 form-group">
                    <input type="password" class="form-control" id="add1" name="add1" placeholder="New Password" />
                </div>
                <div class="col-md-12 form-group">
                    <input type="password" class="form-control" id="add2" name="add2" placeholder="Confirm Password" />
                </div>
            </form>
            <div class="col-md-12 form-group ">
                <form  method="POST">
                    <div class="g-recaptcha" data-sitekey="your_site_key"></div>
                    <br />
                    <button type="submit" value="submit" class="btn_3">
                        Cập nhật
                    </button>
                </form>
            </div>
        </div>
    </div>
</section>
{{footer}}
{{#section 'js'}}
<script
    src="https://cloud.tinymce.com/5/tinymce.min.js?apiKey=ezd73nxbzc7bu6e86g2l82jbbffke0mwevwrnyvc5q8h89j6"></script>
<script>
    tinymce.init({
        selector: '#txtFullDes',
        height: 600,
        plugins: 'paste image link autolink lists table media',
        menubar: false,
        toolbar: [
            'undo redo | bold italic underline strikethrough | numlist bullist | alignleft aligncenter alignright',
            'forecolor backcolor',
            'table link image media',
        ],
    });
</script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.0.3/js/fileinput.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.0.3/themes/fa/theme.min.js"></script>
<script>
    $('#fuMain').fileinput({
        theme: 'fa',
        dropZoneEnabled: false,
        allowedFileExtensions: ['png', 'jpg', 'gif'],
    });
</script>
<script src="/javascripts/bootstrap-input-spinner.js"></script>
<script> $("input.Price").inputSpinner();
    $()
</script>
{{/section}}

{{#section 'css'}}
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.0.3/css/fileinput.min.css" media="all"
    rel="stylesheet" type="text/css" />
{{/section}}

{{>header}}
<section class="breadcrumb breadcrumb_bg">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="breadcrumb_iner">
                    <div class="breadcrumb_iner_item">
                        <p>Trang chủ/ Đăng sản phẩm</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="checkout_area mt-5 ">
  <div class="container">
    <div class="billing_details">
      <div class="form-group ">
        <h4>Đăng sản phẩm</h4>
      </div>
      <form class="row contact_form" method="Post" novalidate="novalidate" enctype="multipart/form-data">
        <div class="col-md-12 form-group ">
          <label class="col-sm-2 col-form-label" for="fullname">Tên sản phẩm </label>
          <input type="text" class="form-control" id="name" name="Name" />
        </div>
        <div class="col-md-6 form-group">
          <label class="col-sm-4 col-form-label" for="price">Giá mua ngay</label>
          <input type="text" class="form-control" id="PriceNow" name="PriceNow" />
        </div>
        <div class="col-md-6 form-group">
          <label class="col-sm-4 col-form-label" for="price">Giá khởi điểm</label>
          <input type="text" class="form-control" id="PriceStart" name="PriceStart" />
        </div>
        <div class="col-md-12 form-group">
          <label class="col-sm-4 col-form-label" for="Step">Bước giá</label>
          <input type="text" class="form-control" id="PriceStep" name="PriceStep" />
        </div>
        <div class="col-md-12 form-group">
          <label class="col-sm-4 col-form-label" for="email">Mô tả</label>
          <textarea class="form-control" id="txtFullDes" name="FullDes"></textarea>
        </div>
        <div class="col-md-12 form-group">
          <label class="col-sm-2  control-label" for="pasword">Phương thức đấu giá</label>
          <div class="input-wrap pl-5">
            <div class="row ">
              <div class="col-xs-4 ">
                <label>
                  <input type="radio" name="gender" value="on" id="gender_male" class="gender" checked="">
                  <span>
                    <i class="ico"></i>
                  </span>
                  Tự động
                </label>
              </div>
              <div class="col-xs-4 pl-5">
                <label>
                  <input type="radio" name="gender" value="off" id="gender_female" class="gender">
                  <span>
                    <i class="ico"></i>
                  </span>
                  Mặc định
                </label>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-12 form-group">
          <label class="col-sm-2  control-label" for="Category">Thể loại</label>
          <div class="input-wrap pl-5">
            <div class="row ">
              {{#each this.categories}}
              <div class="col-xs-4 mr-5">
                <label>
                  <input type="radio" name="{{CatName}}" value="on">
                  <span>
                    <i class="ico"></i>
                  </span>
                  {{CatName}}
                </label>
              </div>
              {{/each}}
            </div>
            <form class="row contact_form" action="#" method="post" novalidate="novalidate">
                <div class="col-md-12 form-group ">
                    <label class="col-sm-2 col-form-label" for="fullname">Tên sản phẩm </label>
                    <input type="text" class="form-control" id="name" name="Name" required/>
                </div>
                <div class="col-md-4 form-group">
                    <label class="col-sm-4 col-form-label" for="price" >Giá khởi điểm</label>
                    <input type="number" class="form-control" name="Price" required/>
                </div>

        <div class="col-md-12 form-group">
          <label class="col-sm-4 col-form-label" for="email">Thêm ảnh cho sản phẩm</label>
          <div class="file-loading">
            <input id="fuMain" name="fuMain" type="file" multiple>
          </div>
        </div>
        <div class="col-md-12 form-group">
            <div class="g-recaptcha" data-sitekey="your_site_key"></div>
            <br />
            <button type="submit" class="btn_3">
                Đăng sản phẩm
            </button>
        </div>
        </form>
    </div>
</section>

{{>footer}}
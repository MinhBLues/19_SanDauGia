{{>header}}
<section class="banner_part">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-sm-7">
                <div class="banner_slider">
                    <div class="single_banner_slider">
                        <div class="banner_text">
                            <div class="banner_text_iner">
                                <h1>Sàn đấu giá trực tuyến</h1>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="cat_product_area section_padding border_top">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="product_top_bar d-flex justify-content-between align-items-center">
                            <div class="single_product_menu product_bar_item">
                                <h2>Top 5 sản phẩm gần kết thúc</h2>
                            </div>
                        </div>
                    </div>
                    {{#each this.nearFinish}}
                    <div class="col-lg-4 col-sm-6 mt-10" style="display: bvlock;">
                        <a class="h-100" href="/detail/{{ProductID}}">
                            <div class="card m-auto h-100" style="width: 18rem; background-color: transparent;">
                                <img width="300" height="340" class="card-img-top" src="/images/arrivel/{{IMG}}.png"
                                    alt="">
                                <div class="card-body">
                                    <h5 class="card-title text-center">{{Name}}</h5>
                                    <p class="card-text">
                                        <p>Giá hiện tại: {{Numberformat Price}} VND</p>
                                        {{#if InstancePrice}}
                                        <p>Giá mua ngay: {{Numberformat InstancePrice}} VND</p>
                                        {{/if}}
                                        <p>Ngày kết thúc: {{DateTimeFormat EndTime}}</p>
                                    </p>
                                </div>
                        </a>
                        <a class="mt-0 card-footer text-center " href="#">
                            <i class="far fa-heart" style="color: red;"></i>
                            <span class="text-danger"> Yêu thích</span>
                        </a>
                    </div>
                </div>
                {{/each}}
                <div class="col-sm-12">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="product_top_bar d-flex justify-content-between align-items-center">
                                <div class="single_product_menu product_bar_item">
                                    <h2>Top 5 sản phẩm có nhiều lượt ra giá nhất</h2>
                                </div>
                            </div>
                        </div>
                        {{#each this.popular}}
                        <div class="col-lg-4 col-sm-6 mt-10" style="display: bvlock;">
                            <a class="h-100" href="/detail/{{ProductID}}">
                                <div class="card m-auto h-100" style="width: 18rem; background-color: transparent;">
                                    <img width="300" height="340" class="card-img-top" src="/images/arrivel/{{IMG}}.png"
                                        alt="">
                                    <div class="card-body">
                                        <h5 class="card-title text-center">{{Name}}</h5>
                                        <p class="card-text">
                                            <p>Giá hiện tại: {{Numberformat Price}} VND</p>
                                            {{#if InstancePrice}}
                                            <p>Giá mua ngay: {{Numberformat InstancePrice}} VND</p>
                                            {{/if}}
                                            <p>Ngày kết thúc: {{DateTimeFormat EndTime}}</p>
                                        </p>
                                    </div>
                            </a>
                            <a class="mt-0 card-footer text-center " href="#">
                                <i class="far fa-heart" style="color: red;"></i>
                                <span class="text-danger"> Yêu thích</span>
                            </a>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
            <div class="col-sm-12">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="product_top_bar d-flex justify-content-between align-items-center">
                            <div class="single_product_menu product_bar_item">
                                <h2>Top 5 sản phẩm có giá cao nhất</h2>
                            </div>
                        </div>
                    </div>
                    {{#each this.mostExpensive}}
                    <div class="col-lg-4 col-sm-6 mt-10" style="display: bvlock;">
                        <a class="h-100" href="/detail/{{ProductID}}">
                            <div class="card m-auto h-100" style="width: 18rem; background-color: transparent;">
                                <img width="300" height="340" class="card-img-top" src="/images/arrivel/{{IMG}}.png"
                                    alt="">
                                <div class="card-body">
                                    <h5 class="card-title text-center">{{Name}}</h5>
                                    <p class="card-text">
                                        <p>Giá hiện tại: {{Numberformat Price}} VND</p>
                                        {{#if InstancePrice}}
                                        <p>Giá mua ngay: {{Numberformat InstancePrice}} VND</p>
                                        {{/if}}
                                        <p>Ngày kết thúc: {{DateTimeFormat EndTime}}</p>
                                    </p>
                                </div>
                        </a>
                        <a class="mt-0 card-footer text-center " href="#">
                            <i class="far fa-heart" style="color: red;"></i>
                            <span class="text-danger"> Yêu thích</span>
                        </a>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
    </div>
</section>
{{>footer}}